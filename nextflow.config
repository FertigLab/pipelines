profiles {
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
    }

    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
    }

    slurm {
        singularity.enabled = true
        singularity.autoMounts = true
        process {
            executor = 'slurm'
            cpus = 10
            memory = '10 GB'
        }
    }
}



